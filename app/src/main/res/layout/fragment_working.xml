<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.working.WorkingFragment">

    <include layout="@layout/titlebar_layout" />

    <com.xuexiang.xui.widget.banner.widget.banner.SimpleImageBanner
        android:id="@+id/ad_banner"
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        app:bb_scale="0.5625" />

    <com.xuexiang.xui.widget.banner.recycler.BannerLayout
        android:id="@+id/banner2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:bl_orientation="horizontal"
        app:bl_showIndicator="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="消息提醒"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <include layout="@layout/layout_refresh_recycleview"/>

</LinearLayout>